<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="3">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="boite 0 row 0, column 0"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="0"></TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="boite 2 row 2, column 2"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_column="2"
                android:layout_row="2"></TextView>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/cardview_dark_background"
                android:layout_column="1"
                android:layout_row="1"
                android:orientation="vertical">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="apparaitre/disparaitre le text"
                    android:onClick="erasetext"
                    android:layout_margin="25dp"></Button>

                <EditText android:id="@+id/text2"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:text="Text a faire disparaitre"
                    android:layout_margin="10dp"/>
            </LinearLayout>




        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
